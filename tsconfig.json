{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    
    "outDir": "test-out",
    "rootDir": "test",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["test"],
  "exclude": ["node_modules", "test-out", "dist"]
}
